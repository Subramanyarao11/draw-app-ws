{
    "version": 2,
    "github": {
        "enabled": false
    },
    "builds": [
        {
            "src": "/apps/api/src/main.ts",
            "use": "@vercel/node"
        },
        {
            "src": "/apps/client/dist/*",
            "use": "@vercel/static"
        }
    ],
   "routes": [
    {
      "src": "/(.*\\.(js|css|ico|png|jpg|jpeg|svg|webp)$)",
      "dest": "apps/client/dist/$1"
    },
    {
      "src": "/api/(.*)",
      "dest": "apps/api/dist/main.js"
    },
    {
      "src": "/(.*)",
      "dest": "apps/client/dist/index.html"
    }
  ]
}
